<div class="container">
    <%= link_to "Messages", messages_path %>
    <%= link_to "Create Message", new_message_path %>
</div>

<div class="container">
    <h1>Edit Message</h1>

    <%= form_for @message do |f| %>
        <%= f.label :title %><br />
        <%= f.text_field :title, maxlength: 141 %><br /><br />
        <%= f.label :body %><br />
        <%= f.text_field :body, maxlength: 141 %><br />
        
        <%= f.submit "Update Message" %>

    <% end %>
</div>