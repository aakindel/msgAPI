<%= stylesheet_link_tag "messages/index" %>
<%= stylesheet_link_tag "messages/nav" %>

<%= render partial: "nav" %>
<%= render partial: "breadcrumbs" %>

<div class="container">
    <% @messages.each do |message| %>
        <div class="hoverable z-depth-1 msg_card">
            <%= link_to message_path(message.id), class: 'msg_link' do %>
                <%= render partial: "msg_content", locals: {message: message} %>
            <% end %>
            <% if message.hashtags[0] %>
                <div class="divider"></div>
                <%= render partial: "tag_content", locals: {message: message} %>
            <% end %>
        </div>

    <% end %>

</div>